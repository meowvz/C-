using System;

namespace SumEven1
{
    class Program
    {
        static void Main(string[] args)
        {
            //Посчитать количество и сумму парных чисел в диапазоне от 1 до N.
            int n, k, sum;
            n = Convert.ToInt32(Console.ReadLine());
            k = 0;
            sum = 0;

               for (int i = 2; i <= n; i = i + 2)
               {
                   k++;
                   sum += i;
               }
            Console.WriteLine("Сумма четных чисел: " + sum);
            Console.WriteLine("Количество четных чисел: " + k);
            Console.ReadLine();
        }
    }
    }
