using System;
class HelloWorld {
  static void Main() {
  //В строке заменить все двоеточия (:) знаком процента (%). Подсчитать количество замен.
    Console.Write("Введите строку: ");
    string str = Console.ReadLine();
    int count = 0;
    for (int i = 0; i < str.Length; i++)
    {
        if (str[i] == ':')
        {
            count++;
        }
    }
    str = str.Replace(':','%');
    Console.Write("Количество замен: ");
    Console.Write(count);
    Console.Write("\nНовая строка: ");
    Console.Write(str);
  }
}
